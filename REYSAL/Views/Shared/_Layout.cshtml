<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - REYSAL Capacitaciones</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div>
        <div class="card-group" style="background-color: blue">
            <div class="card border-0" style="background-color: blue">
                <div class="card-body">
                    <img src="~/img/logotipo.png" width="200px" height="100px" style="background-color: white" />
                </div>
            </div>
            <div>
                <br />
                <h1 style="border-color: white; border-style: solid; font-size: 50px">REYSAL CAPACITACIONES</h1>
            </div>
            <div class="card border-0" style="background-color: blue">
                <div class="card-body">
                    <strong>
                        Telefono: (449) 602-37-87
                        <br />
                        Celular: (449) - 189 - 63 - 41
                    </strong>
                    <br />
                    <a class="btn btn-info" href="mailto:contacto@reysalcapacitaciones.com">contacto@reysalcapacitaciones.com</a>
                    <br />
                    <a href="https://www.facebook.com/Reysal-Capacitaciones-111031377153613/" target="_blank"><img src="~/img/Facebook.jpg" width="20px" height="20px" /></a>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ">
                <ul class="navbar-nav flex-grow-1 justify-content-center bg-dark">
                    <li class="nav-item btn btn-outline-danger">
                        <a class="nav-link text-info" asp-area="" asp-controller="Home" asp-action="Index">INICIO</a>
                    </li>
                    <li class="nav-item  btn btn-outline-danger">
                        <a class="nav-link text-info" asp-controller="Home" asp-action="About">QUIENES SOMOS</a>
                    </li>
                    <li class="nav-item btn btn-outline-danger dropdown">
                        <a class="nav-link text-info" asp-area="" asp-controller="Cursos" asp-action="Index">CURSOS</a>
                    </li>
                    <li class="nav-item  btn btn-outline-danger">
                        <a class="nav-link text-info" asp-controller="Home" asp-action="Eventos">PROXIMOS EVENTOS</a>
                    </li>
                    <li class="nav-item btn btn-outline-danger">
                        <a class="nav-link text-info" asp-controller="Home" asp-action="Contactanos">CONTACTANOS</a>
                    </li>
                    <!--<li class="nav-item btn btn-outline-danger  btn btn-outline-danger">
                        <a class="nav-link text-info" asp-controller="Home" asp-action="Galeria">Galeria</a>
                    </li>
                    <li class="nav-item  btn btn-outline-danger">
                        <a class="nav-link text-info" asp-controller="Home" asp-action="Testimonios">Testimonios</a>
                    </li>-->
                </ul>
            </div>
        </div>
    </nav>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - REYSAL Capacitaciones <!--- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
